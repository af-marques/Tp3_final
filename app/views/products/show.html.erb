<div id="conteudo" xmlns="http://www.w3.org/1999/html">
  <div id="navP">
    <% category = Category.find(@product.category_id)%>
    /<%= link_to "Home", root_path %> /  <%= link_to category.name, category %> / <%= @product.name %>
  </div>
  <div id="sidebarP">
    <p id="nameP"><%= @product.name %></p>
    <%=  image_tag(@product.image_url, :alt=>"no_image.jpg", :width=>"150", :height=>"150") %>
    <p id="preco"><%= @product.price.to_f %> â‚¬</p>
    <p><%= button_to 'Add to Cart', line_items_path(:product_id => @product) %> </p>
    <p id="marca"><!--%= @product.category_id %--></p>
    <p><b>Same trademark..</b><br/></p>
    <div id="tradeMark"></div>
  </div>
  <div id="corpo">
    <p id="notice"><%= notice %></p>
    <p><b>Description:</b></p>
    <% if @product.description.nil? %>
       <p>No description</p>
    <% else %>
        <%= @product.description %>
    <%end%>
    <br/>
    <br/>
    <b>Product photos</b>
    <table id="photos">
      <tr>
        <td><%=  image_tag(@product.image_url, :alt=>"no_image.jpg", :width=>"150", :height=>"150" )%></td>
        <td><%=  image_tag(@product.image_url, :alt=>"no_image.jpg", :width=>"150", :height=>"150" )%></td>
        <td><%=  image_tag(@product.image_url, :alt=>"no_image.jpg", :width=>"150", :height=>"150" )%></td>
      </tr>
    </table>
    <br/>
    <div id="reviewD">
      <b>Review:</b>
      <p id="review"></p>
    </div>
    <br/>
    <div id="similar">
      <b>Related Products:</b>
      <br/>
      <div id="similarP">
        <% if @relations.count >0 %>
            <table>
              <% @relations.each do |r| %>
                  <% @pro = Product.find(r.assoc_id)  %>
                  <tr>
                    <td> <%= @pro.name %> </td>
                    <td> <%= link_to image_tag(@pro.image_url, :height => "60%", :width => "60%", :alt=>"no_image.jpg"), @pro%> </td>
                  </tr>
              <%end%>
            </table>
        <% else %>
            <p> Forever Alone Product D:</p>
        <%end%>
      </div>
    </div>
  </div>
</div>